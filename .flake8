[flake8]
max-line-length = 88
extend-ignore = 
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # F401: imported but unused (handled by other tools)
    F401
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    build,
    dist,
    *.egg-info
per-file-ignores =
    # Tests can have unused imports and long lines
    tests/*:F401,E501
    # __init__.py files can have unused imports
    __init__.py:F401